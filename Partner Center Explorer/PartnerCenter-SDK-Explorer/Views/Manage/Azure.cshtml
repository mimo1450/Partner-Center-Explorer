@model Microsoft.Store.PartnerCenter.Samples.SDK.Explorer.Models.SubscriptionManageModel

@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs{
    <ol class="breadcrumb navbar-breadcrumb">
        <li>Customers</li>
        <li><a href="/Customers/@Model.CustomerId/Show">@Model.CompanyName</a></li>
        <li>Subscriptions</li>
        <li><a href="/Customers/@Model.CustomerId/Subscriptions/@Model.SubscriptionId">@Model.FriendlyName</a></li>
        <li class="active">Manage</li>
    </ol>
}

<div class="side-body padding-top">
    <div id="modal-container" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-content"></div>
    </div>
    <div class="row">
        <div class="col-md-4 col-sm-8">
            <select id="ddlResourceGroups" class="form-control">
                <option>Loading...</option>
            </select>
        </div>
    </div>
    <div class="row">
        <h4>Deployments</h4>
        <hr />
        <div class="row">
            <div class="col-md-4 col-sm-8">
                <a class="lnkNewDeployment" href="/Customers/@Model.CustomerId/Subscriptions/@Model.SubscriptionId/Manage/NewDeployment" id="NewDeployment">New Deployment</a>
            </div>
        </div>
        <div id="deployments" style="display: none;"></div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var ddlResourceGroups = $('#ddlResourceGroups');

            $.ajax({
                cache: true,
                type: 'GET',
                url: '@Url.Action("/ResourceGroups")',
                success: function (data) {
                    ddlResourceGroups.html('');
                    $.each(data, function (index, item) {
                        ddlResourceGroups.append($('<option></option>').val(item.Name).html(item.Name));
                    })

                    var group = ddlResourceGroups.find(":selected").text();

                    $.get('/Customers/@Model.CustomerId/Subscriptions/@Model.SubscriptionId/Manage/Deployments?resourceGroupName=' + group, function (data) {
                        $('#deployments').html(data);
                        $('#deployments').fadeIn('fast');
                    });
                }
            });

            $('#btnApply').click(function () {
                $.post(
                    '@Url.Action("ApplyTemplate", "Subscriptions")', {
                        customerId: '@Model.CustomerId',
                        subscriptionId: '@Model.SubscriptionId',
                        resourceGroupName: $('#ddlResourceGroups').find(":selected").text(),
                        templateUri: $('#txtTemplateUri').val(),
                        parametersUri: $('#txtParametersUri').val()
                    }
                );
            });

            $('#ddlResourceGroups').change(function () {
                var group = $(this).val();

                $.get('/Customers/@Model.CustomerId/Subscription/@Model.SubscriptionId/Manage/Deployments?resourceGroupName=' + group, function (data) {
                    $('#deployments').html(data);
                    $('#deployments').fadeIn('fast');
                });
            });

            $(".lnkNewDeployment").click(function (e) {
                e.preventDefault();
                $(this).attr('data-target', '#modal-container');
                $(this).attr('data-toggle', 'modal');
            });

            $(document).on('hidden.bs.modal', function (e) {
                $(e.target).removeData('bs.modal');
            });

            function OnSuccessCallback(data, status, xhr) {
                $('#modal-container').modal('hide');
            }
        });
    </script>
}